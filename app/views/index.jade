extends layout

block content
    div.header
        h1 XIT #1
        h2 23 Aug 2014
    div.content
        table.pure-table
            thead
                tr
                    th #
                    th Team
                    th W
                    th D
                    th L
                    th F
                    th A
                    th GD
                    th PTS
            tbody
                each t,index in teams
                    tr
                        td #{index+1}
                        td(class="emphazie") #{t.name}
                        td #{t.win || 0 }
                        td #{t.draw || 0 }
                        td #{t.lose || 0 }
                        td #{t.goal_for || 0 }
                        td #{t.goal_against || 0}
                        td #{t.total_goal || 0 }
                        td #{t.score || 0 }
